<h1>Editar perfil</h1>
<div class="col-sm-5">
    
<%= form_for :person do |f| %>
    <b>
    First name: <%= f.text_field :first_name %> <br> <br>
    Last name : <%= f.text_field :last_name %> <br> <br>
    Birth :  <%= date_select("article", "published_on")  %> <br> <br>
    Biography : <%= text_area :person, :biography %> <br> <br>
    <%= f.submit %> <br> <br>
<% end %>
</div>